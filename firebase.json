{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "firestore": [
      {
        "database": "(default)",
        "rules": "firestore.default.rules",
        "indexes": "firestore.default.indexes.json"
      }
    ]
  }
}

